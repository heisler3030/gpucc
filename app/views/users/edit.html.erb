<div id="header" class="row">
  <div class="col-xs-12">
    <ol class="breadcrumb">
      <li><%= link_to "Home", home_path %></li>
      <li><%= link_to "Users", users_path %></li>
      <li><%= link_to @user.name, @user %></li>
      <li class="active">Edit Profile</li>
    </ol>
  </div>
</div>

<h2>Edit Profile</h2>

<%= form_for(@user, :url => user_path, :html => { :method => :put, :role => 'form'}) do |f| %>
  <%= f.error_messages %>

    <%= render "/users/user_main_fields", :f => f %>

    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :new_password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, :autocomplete => "off", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :new_password_confirmation%><br />
        <%= f.password_field :password_confirmation, :class => "form-control"  %>
      </div>
    </div>
  </div>

  <%= render "/users/email_options", :f => f %>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="form-group">
        <%= f.label :current_password %><br />
        <%= f.password_field :current_password, :class => "form-control", placeholder: "Enter password to confirm changes" %>
      </div>

      <div class="form-group">
        <%= f.submit "Update", :class => "btn btn-lg btn-primary btn-block" %>
      </div>
    </div>
  </div>

<% end %>






