<h1>All Challenges</h1>

<div class="row text-right"><div class="col-md-12"><%= link_to "+ New Challenge", new_challenge_path, :class => "btn btn-primary active", :role=>"button" %></div></div>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Start Date</th>
			<th>Title</th>
			<th>Description</th>
			<th>Creator</th>
			<th>End Date</th>
			<th>Workouts</th>
		</tr>
	</thead>
	<tbody>
	<% @challenges.each do |c| %>
	  <tr>
	  	<td><%= c.start_date ? c.start_date.strftime("%B %e, %Y") : nil %></td>	  	
	  	<td><a href="<%= url_for(c) %>"><%= c.title %></a></td>
	  	<td><%= c.description %></td>
	  	<td><%= User.find(c.created_by_id).name %></td>
	  	<td><%= c.end_date ? c.end_date.strftime("%B %e, %Y") : nil %></td>
	  	<td><%= c.workouts.count %></td>
	  </tr>
	  
	<% end %>
	</tbody>
</table>

