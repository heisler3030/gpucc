
<div class="panel panel-primary">
	<div class="panel-heading">Active Participants (<%= @challenge.active_assignments.count %>)</div>
	<div class="panel-body">

		<table class="table">
		  <thead>
		  	<th>User</th>
		  	<th>Join Date</th>
		  </thead>
		  <tbody>
		    <% challenge.active_assignments.each do |ca| %>
		      <tr>
		        <td><%= link_to ca.user.name, ca %></td>
		        <td><%= ca.join_date %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>

<div class="panel panel-danger">
	<div class="panel-heading">Disqualified Participants (<%= @challenge.disqualified_assignments.count %>) </div>
	<div class="panel-body">

		<table class="table">
		  <thead>
		  	<th>User</th>
		  	<th>Disqualify Date</th>
		  </thead>
		  <tbody>
		    <% challenge.disqualified_assignments.each do |ca| %>
		      <tr>
		        <td><%= ca.user.name %></td>
		        <td><%= ca.disqualify_date %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>

<div class="panel panel-success">
	<div class="panel-heading">Completed Participants (<%= @challenge.completed_assignments.count %>)</div>
	<div class="panel-body">

		<table class="table">
		  <thead>
		  	<th>User</th>
		  	<th>Completed Date</th>
		  </thead>
		  <tbody>
		    <% challenge.completed_assignments.each do |ca| %>
		      <tr>
		        <td><%= ca.user.name %></td>
		        <td><%= ca.completed_date %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>