<%= form_for @challenge, :url =>challenges_path, :html => {:role => 'form'} do |f| %>
  <%= f.error_messages %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title,:class => "form-control" %>
  </div>
 
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => "form-control" %>
  </div>

  <div class="input-daterange">
	<%= f.label :start_date, "Effective Dates" %>
    <%= f.text_field :start_date, :class => "input-small" %>
    <span class="add-on">to</span>
    <%= f.text_field :end_date, :class => "input-small" %>
  </div>

  <h2>Workouts</h2>
  <div id="workouts">

	<%= f.fields_for :workouts do |wf| %>
	  <%= render "workout_fields", :f => wf %>
  <% end %>

  <p><%= link_to_add_fields "Add Workout", f, :workouts %></p>

  </div>
  <div class="form-group">
  	<%= f.submit %>
  </div>

<% end %>


