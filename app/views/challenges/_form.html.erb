<%= form_for @challenge, :url =>challenges_path, :html => {:role => 'form'} do |f| %>
  <%= f.error_messages %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title,:class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :start_date, "Effective Dates" %>
    <div class="input-daterange input-group" id="datepicker">
      <%= f.text_field :start_date, :class => "input-sm form-control" %>
      <span class="input-group-addon">to</span>
      <%= f.text_field :end_date, :class => "input-sm form-control" %>
    </div>
  </div>

  <div class="form-group" style="padding-top:10px">
    <%= f.label :description %>
    <%= f.text_area :description, :class => "nodisplay summernote" %>
  </div>

  <div class="form-group">
  	<%= f.submit :class => 'btn btn-primary', :style => 'margin-top:10px' %>
  </div>

<% end %>