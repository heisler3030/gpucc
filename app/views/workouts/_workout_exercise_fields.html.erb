<div class="workout_exercise fields">

	<div class="form-group">
    	<%= f.label :exercise_id %>
    	<%= f.collection_select :exercise_id, Exercise.all, :id, :name, :class => "form-control" %>
	</div>					

	<div class="form-group">
	  <%= f.label :goal %>
	  <%= f.text_field :goal, :class => "form-control" %>
	</div>	

	<div class="form-group">
    	<%= f.label :goal_type_id %>
    	<%= f.collection_select :goal_type_id, GoalType.all, :id, :title, :class => "form-control" %>
	</div>	

	<%= link_to_remove_fields "remove", f %>	
</div>
