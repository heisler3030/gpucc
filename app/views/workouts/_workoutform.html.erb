

  <%= f.error_messages %>  
  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :start_date, "Effective Dates" %>
        <div class="input-daterange input-group" id="datepicker">
          <%= f.text_field :start_date, :class => "input-sm form-control", onchange: "updatePlaceholders();" %>
          <span class="input-group-addon">to</span>
          <%= f.text_field :end_date, :class => "input-sm form-control" %>
        </div>
      </div>
    </div>
    <div class="col-sm-8">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, :class => "input-sm form-control" %>
      </div>
    </div>          
  </div>
  <div class="form-group">
    <%= f.label :motivation %>
    <%= f.text_area :motivation, :class => "summernote" %>
  </div>  

  <h2>Assigned Exercises</h2> 
  <small><%= link_to_add_fields "Add Exercise", f, :workout_exercises, "workout_exercises" %></small>


  <div>
    <table id="workout_exercises" class="table">
      <%= f.fields_for :workout_exercises do |we| %>
        <%= render "workout_exercise_fields", :f => we %>
      <% end %>
    </table>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>