

  <%= f.error_messages %>  

  <div class="input-daterange">
    <%= f.label :start_date, "Effective Dates" %>
      <%= f.text_field :start_date, :class => "input-small" %>
      <span class="add-on">to</span>
      <%= f.text_field :end_date, :class => "input-small" %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>          

  <div class="form-group">
    <%= f.label :comments %>
    <%= f.text_area :comments, :class => "summernote" %>
  </div>  

  <h2>Assigned Exercises</h2> 
  <small><%= link_to_add_fields "Add Exercise", f, :workout_exercises, "workout_exercises" %></small>

  <div>
    <table id="workout_exercises" class="table">
      <%= f.fields_for :workout_exercises do |we| %>
        <%= render "workout_exercise_fields", :f => we %>
      <% end %>
    </table>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>