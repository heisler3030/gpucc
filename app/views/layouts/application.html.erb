<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= favicon_link_tag 'apple-touch-icon.png', rel: 'apple-touch-icon' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title><%= content_for?(:title) ? yield(:title) : ENV["APPNAME"] %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : ENV["APPNAME"] %>">
    <%= stylesheet_link_tag "application", media: "all" %>

   <%= csrf_meta_tags %>
  </head>
  <body>
    <%# application layout styled for Bootstrap 2.3 %>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="col-xs-12">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
          <footer>
            <div style="width:100%; margin:auto">
              Copyright 2014-2015 - <%= ENV["APPNAME"] %>  |   <%= link_to "Privacy Policy", privacy_path %>  |   <%= link_to "Terms of Service", terms_path %>
              <div>
            </div>
          </footer>
        </div>
      </div>
    </main>

    <%= javascript_include_tag "application" %>

  </body>
</html>
