<div class="jumbotron" id="splashjumbo">
  <h1><%= ENV["APPNAME"] %></h1>
  <p>Watching your every move.</p>

				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical form-signin' }) do |f| %>
				        <h2 class="form-signin-heading">Please sign in</h2>
				        <%= f.email_field :email, {:class => "form-control", :placeholder => "Email address", :type => "email", :required => "true", :autofocus => "true"} %>
				        <%= f.password_field :password, {:class => "form-control", :placeholder => "Password", :type => "password", :required => "true"} %>
				        <% if devise_mapping.rememberable? %>
							<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
						<% end %>
				        <%= f.submit "Sign in", :class => "btn btn-lg btn-primary btn-block" %>
				<% end %>

			<%= render "devise/shared/links" %>

</div>
